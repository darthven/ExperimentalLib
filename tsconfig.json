{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2017"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*", "src/test/*.test.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
