{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",    
      "es2016"      
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*", "src/test/*.test.ts"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
